---
// src/components/Chat.astro
---
<div class="bg-white shadow-lg rounded-lg p-4">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold text-primary">Atendimento Online</h1>
      <button id="closeChatButton" class="text-red-500 font-bold text-xl">&times;</button>
    </div>
    
    <!-- Container para exibição das mensagens -->
    <div id="chatContainer" class="bg-gray-100 shadow rounded-lg p-4 h-[400px] overflow-y-auto">
      <!-- As mensagens serão inseridas dinamicamente -->
    </div>
    
    <!-- Formulário de envio de mensagens -->
    <form id="chatForm" class="mt-4 flex">
      <input id="chatInput" type="text" class="flex-grow p-2 border border-gray-300 rounded-l-md focus:outline-none" placeholder="Digite sua mensagem..." autocomplete="off" />
      <button type="submit" class="bg-blue-900 text-white px-4 py-2 rounded-r-md hover:bg-blue-700">
        Enviar
      </button>
    </form>
</div>
  
  <!-- Importa o script do chat -->
  <script type="module" src="/scripts/chat.js"></script>
  