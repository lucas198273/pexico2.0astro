---
export interface Props {
  id: string;
  title: string;
  products: Array<{
    name: string;
    description: string;
    price: string;
    image: string;
  }>;
}
const { id, title, products } = Astro.props as Props;
---

<section id={id} class="py-8">
  <h2 class="text-3xl font-bold text-center mb-6">{title}</h2>
  <!-- Limite a largura máxima para evitar cards muito grandes -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mx-auto max-w-4xl px-4">
    {products.map((product) => (
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <!-- Reduzi a altura da imagem para h-40; ajuste conforme necessário -->
        <img class="w-full h-40 object-cover" src={product.image} alt={product.name} />
        <div class="p-4">
          <h3 class="text-lg font-bold text-blue-900">{product.name}</h3>
          <p class="text-gray-700 mt-2 text-sm">{product.description}</p>
          <div class="flex items-center justify-between mt-3">
            <p class="font-bold text-lg text-green-600">{product.price}</p>
            <button class="bg-gray-900 text-white px-3 py-1 rounded add-to-cart-btn" data-name={product.name} data-price={product.price}>
              <i class="fa fa-cart-plus"></i>
            </button>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
