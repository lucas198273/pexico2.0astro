---
// src/components/Footer.astro
---
<section class="bg-gray-100 py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-blue-900 mb-8">Entre em Contato</h2>
  
      <form action="#" method="POST" class="max-w-4xl mx-auto bg-white p-8 shadow-lg rounded-lg">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <!-- Nome -->
          <div class="flex flex-col">
            <label for="name" class="text-lg font-semibold text-gray-700 mb-2">Nome</label>
            <input type="text" id="name" name="name" required class="p-3 border border-gray-300 rounded-md" placeholder="Seu nome">
          </div>
  
          <!-- Email -->
          <div class="flex flex-col">
            <label for="email" class="text-lg font-semibold text-gray-700 mb-2">Email</label>
            <input type="email" id="email" name="email" required class="p-3 border border-gray-300 rounded-md" placeholder="Seu email">
          </div>
        </div>
  
        <!-- Mensagem -->
        <div class="flex flex-col mt-6">
          <label for="message" class="text-lg font-semibold text-gray-700 mb-2">Mensagem</label>
          <textarea id="message" name="message" rows="5" required class="p-3 border border-gray-300 rounded-md" placeholder="Escreva sua mensagem"></textarea>
        </div>
  
        <!-- BotÃ£o de Envio -->
        <div class="mt-6 text-center">
          <button type="submit" class="bg-blue-900 text-white px-6 py-3 rounded-md hover:bg-blue-700">
            Enviar Mensagem
          </button>
        </div>
      </form>
    </div>
  </section>
  