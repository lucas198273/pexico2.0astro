---
const { className } = Astro.props;
---
<header class="relative w-full m-0 p-0  bg-black">
  <nav class="container mx-auto flex items-center justify-between p-4 h-16 relative z-10">
    <!-- Status do restaurante -->
    <div id="date-span" class="bg-green-600 px-4 py-1 rounded-lg mt-16 absolute top-4 left-1/2 transform -translate-x-1/2 z-20">
      <span id="status-text" class="text-white font-medium">Aberto</span>
    </div>

    <!-- Menu desktop -->
    <ul class="hidden md:flex space-x-8 text-white">
      <li>
        <li><a href="/sobre">Sobre Nos </a></li>
        <li><a href="/">Cardapio </a></li>
        
      </li>
    </ul>

    <!-- Menu mobile -->
    <button id="menu-button" class="md:hidden text-white p-2 transition" aria-label="Toggle Menu">
      <!-- Ícone -->
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </nav>

  <!-- Menu mobile dropdown -->
  <div id="mobile-menu" class="hidden bg-black bg-opacity-80 p-4 rounded-lg shadow-lg absolute top-16 w-full z-20">
    <ul class="space-y-4 text-start text-white">
      <li><a href="/sobre">Sobre Nos </a></li>
      <li><a href="/">Cardapio </a></li>
 
       
      </li>
    </ul>
  </div>
</header>
