---
export interface Props {
  id: string;
  title: string;
  products: Array<{
    name: string;
    description: string;
    price: string;
    image: string;
  }>;
}

const { id, title, products } = Astro.props as Props;
---

<section id={id} class="py-6">
  <h2 class="text-3xl font-bold text-center mb-6">{title}</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6 mx-auto max-w-6xl px-4">
    {products.map((product) => (
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <img class="w-full h-48 object-cover" src={product.image} alt={product.name} />
        <div class="p-4">
          <h3 class="text-lg font-semibold text-blue-900">{product.name}</h3>
          <p class="text-gray-700 mt-2 text-sm">{product.description}</p>
          <div class="flex items-center justify-between mt-4">
            <p class="font-bold text-lg text-green-600">{product.price}</p>
            <button 
              class="bg-gray-900 text-white px-3 py-1 rounded  add-to-cart-btn" 
              data-name={product.name} 
              data-price={product.price}
              aria-label={`Adicionar ${product.name} ao carrinho`}
            >
              <i class="fa fa-cart-plus"></i>
            </button>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
