---
// src/pages/index.astro (ou onde você desejar incluir o chat)
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Baner from '../components/Baner.astro';
import About from '../components/About.astro';
import Footer from '../components/Footer.astro';
import Form from '../components/Form.astro';
import Aboutservice from '../components/Aboutservice.astro';
import Aboutservice2 from '../components/Aboutservice2.astro';
import Modal from '../components/Modal.astro';
import Chat from '../components/Chat.astro';
---
<Layout>
  <Navbar className="custom-class" />
  <Baner />
  <section class="container mx-auto px-4 py-8 flex flex-col justify-center items-center">
    <h1 class="text-3xl font-bold text-primary mb-8">Nossos Serviços</h1>
    <!-- Container com rolagem horizontal -->
    <div class="overflow-x-auto w-full scroll-smooth">
      <!-- Container para os cards dinâmicos -->
      <div id="servicesContainer" class="inline-flex space-x-4 lg:space-x-8 p-4"></div>
    </div>
  </section>
  
  <Aboutservice />
  <div class="w-full h-full bg-black flex flex-col md:flex-row justify-between items-center p-4 md:p-8">
    <!-- Imagem -->
    <div class="w-full md:w-1/2 mb-6 md:mb-0">
      <img src="/assets/postdetalhes.png" alt="img-detalhes" class="w-full h-auto rounded-lg shadow-lg">
    </div>

    <!-- Texto e Botão -->
    <div class="w-full md:w-1/2 md:pl-8">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 text-center md:text-left">
        Automação Inteligente para seu Negócio
      </h2>
      <p class="text-white text-base md:text-lg mb-6 text-center md:text-left">
        Descubra como nosso robô de automação pode revolucionar sua produtividade e eficiência. Com tecnologia de ponta, ele é a solução perfeita para otimizar seus processos e reduzir custos.
      </p>
      <div class="text-center md:text-left">
        <button id="openModalButton" class="mt-4 bg-blue-900 text-white px-4 py-2 rounded-md hover:bg-blue-700">
          Saiba mais
        </button>
      </div>
    </div>
  </div>
 
  <Aboutservice2 />
  <About />
  <Form />
  <Modal />
  
  <!-- Componente de Chat: ficará oculto inicialmente -->
  <div id="chatModal" class="hidden fixed bottom-4 right-4 z-50 w-full max-w-md">
    <Chat />
  </div>
  
  <!-- Botão flutuante para ativar o chat -->
  <button id="chatToggleButton" class="fixed bottom-4 right-4 bg-blue-900 text-white px-4 py-2 rounded-full hover:bg-blue-700 z-60">
    Atendimento Online
  </button>
  
  <Footer />
  <script type="module" src="/scripts/script.js"></script>
  <!-- Script para gerenciamento do chat -->
  <script type="module" src="/scripts/chat.js"></script>
</Layout>
